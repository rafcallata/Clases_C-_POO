@model Shooping.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "RecoverPassword";
}
<flash dismissable="true" />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card bg-primary mb-3" style="width: 450px; height: 450px">
            <h5 class="card-header text-center text-white"><i class="fa-solid fa-lock"></i> Recuperación de Constraseña</h5>
            <div class="card-body bg-light">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>

                    <div class="form-group mt-2">
                        <button input type="submit" value="Recuperación de Contraseña" class="btn btn-primary btn-block"><i class="fa-solid fa-key"></i> Recuperación de Contraseña</button>
                        <a asp-action="Login" class="btn btn-success"><i class="fa-solid fa-reply"></i> Regresar</a>
                    </div>
                </form>
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
            </div>
       </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


